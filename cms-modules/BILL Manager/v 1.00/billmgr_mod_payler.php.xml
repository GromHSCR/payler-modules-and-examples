    <metadata name="company.paymethod.edit_payler.php" type="form">
        <form>
            <field name="name">
                <input type="text" name="name" empty="no"/>
            </field>
			<field name="ptype">
				<select name="ptype"/>
			</field>
            <field name="autodelete">
                <input type="text" name="autodelete"/>
                <desc name="days"/>
            </field>
            <field name="minamount">
